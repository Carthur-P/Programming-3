<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colourWhite"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="bit.pongp1.nzquiz.QuestionActivity">

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="Question 1"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/imageQuestion"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_margin="15dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/waikato_river" />

    <RadioGroup
        android:id="@+id/radioGroupAnswer"
        android:layout_width="209dp"
        android:layout_height="170dp">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/custom_button"
            android:button="@color/colorPrimary"
            android:text="RadioButton"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/custom_button"
            android:button="@color/colorPrimary"
            android:text="RadioButton"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/custom_button"
            android:button="@color/colorPrimary"
            android:text="RadioButton"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/custom_button"
            android:button="@color/colorPrimary"
            android:text="RadioButton"
            android:textSize="18dp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Check" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next" />
    </LinearLayout>

    <Button
        android:id="@+id/btnMoreInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More Info" />

    <Button
        android:id="@+id/btnCheckSocre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Score"
        android:visibility="invisible" />
</LinearLayout>
